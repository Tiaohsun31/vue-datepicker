{
  "name": "vue-datepicker-workspace",
  "private": true,
  "description": "A powerful and flexible Vue 3 DatePicker component with TypeScript and Tailwind CSS",
  "keywords": [
    "vue",
    "vue3",
    "datepicker",
    "typescript",
    "tailwindcss",
    "internationalization",
    "calendar"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Tiaohsun31/vue-datepicker.git"
  },
  "scripts": {
    "dev:component": "pnpm --filter @tiaohsun/vue-datepicker dev",
    "dev:docs": "pnpm --filter docs dev",
    "build": "pnpm build:component && pnpm build:docs",
    "build:component": "pnpm --filter @tiaohsun/vue-datepicker build",
    "build:docs": "pnpm --filter docs build",
    "test": "pnpm --filter @tiaohsun/vue-datepicker test",
    "test:unit": "pnpm --filter @tiaohsun/vue-datepicker test:unit",
    "test:e2e": "pnpm --filter @tiaohsun/vue-datepicker test:e2e",
    "test:coverage": "pnpm --filter @tiaohsun/vue-datepicker test:coverage",
    "type-check": "pnpm --filter @tiaohsun/vue-datepicker type-check"
  }
}
